<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="coursera"
            android:textColor="#7CB8FF"
            android:textSize="42sp"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="19dp"
            android:fontFamily="sans-serif-light" />

        <EditText
            android:id="@+id/namefield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full name (Required)"
            android:textColorHint="#A8A8A8"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:inputType="textPersonName"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-light" />

        <EditText
            android:id="@+id/emailfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email (Required)"
            android:textSize="12sp"
            android:textColorHint="#A8A8A8"
            android:textColor="#FFFFFF"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-light" />

        <EditText
            android:id="@+id/passwordfield"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password (Required)"
            android:textColorHint="#A8A8A8"
            android:textColor="#FFFFFF"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:padding="16dp"
            android:textSize="12sp"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-light" />

        <CheckBox
            android:id="@+id/termsCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By creating an account, I accept Courseraâ€™s Terms of Use and Privacy Notice"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:buttonTint="#7CB8FF"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif-light" />

        <Button
            android:id="@+id/createAccountButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textAllCaps="false"
            android:backgroundTint="#7CB8FF"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:padding="14dp"
            android:layout_marginBottom="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Already Have Account -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account ? "
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="23dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold" />

            <Button
                android:id="@+id/lgbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign in"
                android:textColor="#7CB8FF"
                android:textSize="14sp"
                android:layout_margin="0dp"
                android:fontFamily="sans-serif"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
